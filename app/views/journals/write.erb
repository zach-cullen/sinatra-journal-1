<nav>
  <a href="/user/<%= @user.username %>">My Account</a>
  <a href="/logout">Log Out</a>
</nav>

<h1><%= @journal.title %></h3>

<form>
<% @journal.prompts.each do |prompt| %>
  <p><%= prompt.title %></p>
  <textarea placeholder="Start writing..."></textarea>
<% end %>
<input type="submit" value="Done">
</form>

<p>Add New Journal Prompt:</p>
<form method="POST" action="/prompts/<%=@user.username%>/<%=@journal.id%>">
<textarea name="prompt[title]" placeholder=""></textarea>
<input type="submit" value="Add Prompt">