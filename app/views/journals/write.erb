<h1><%= @journal.title %></h3>

<h4>Prompts:</h4>

<% @journal.prompts.each do |prompt| %>
  <p><%= prompt.title %></p>
  <textarea placeholder="Start writing..."></textarea>
  <input type="submit" value="Submit">
<% end %>

<p>Add New Journal Prompt:</p>
<form method="POST" action="/prompts/<%=@user.username%>/<%=@journal.id%>">
<textarea name="prompt[title]" placeholder="What do you want to write about?"></textarea>
<br><input type="submit" value="Add Prompt">